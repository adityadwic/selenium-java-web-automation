&lt;?xml version="1.0" encoding="UTF-8"?&gt;
&lt;!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"&gt;
&lt;suite name="AutomationExercise Test Suite" verbose="1"&gt;
    
    &lt;listeners&gt;
        &lt;listener class-name="com.automation.utils.ExtentReportManager"/&gt;
    &lt;/listeners&gt;
    
    &lt;test name="User Registration Test" preserve-order="true"&gt;
        &lt;classes&gt;
            &lt;class name="com.automation.tests.UserRegistrationTest"&gt;
                &lt;methods&gt;
                    &lt;include name="testUserRegistration"/&gt;
                &lt;/methods&gt;
            &lt;/class&gt;
        &lt;/classes&gt;
    &lt;/test&gt;
    
    &lt;test name="User Login Test" preserve-order="true"&gt;
        &lt;classes&gt;
            &lt;class name="com.automation.tests.UserLoginTest"&gt;
                &lt;methods&gt;
                    &lt;include name="testUserLoginWithValidCredentials"/&gt;
                &lt;/methods&gt;
            &lt;/class&gt;
        &lt;/classes&gt;
    &lt;/test&gt;
    
&lt;/suite&gt;
